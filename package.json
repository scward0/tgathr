{
  "name": "tgathr",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "prisma generate --schema=./prisma/schema.dev.prisma && next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test:ci && npm run test:e2e",
    "test:db:setup": "npx prisma generate --schema=./prisma/schema.test.prisma && npx prisma db push --schema=./prisma/schema.test.prisma --force-reset",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@prisma/client": "^5.10.2",
    "@stackframe/stack": "^2.8.20",
    "@types/nodemailer": "^6.4.17",
    "date-fns": "^4.1.0",
    "next": "^14.2.29",
    "nodemailer": "^7.0.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.56.4",
    "twilio": "^5.6.1",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@jest/types": "^30.0.5",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.17.50",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "c8": "^10.1.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "prisma": "^5.10.2",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.1",
    "typescript": "^5"
  }
}
